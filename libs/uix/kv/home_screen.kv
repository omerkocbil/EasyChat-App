<HomeScreen>

    PBoxLayout:
        orientation: "vertical"

        PBoxLayout:
            padding: [dp(25), dp(30), dp(5), dp(10)]
            adaptive_height: True

            PLabel:
                text: "Sohbetler"
                font_size: sp(40)
                font_name: "LexendMedium"
                adaptive_height: True
                text_size: self.width, None
            
            PIconButton:
                icon: "more-vertical"
                mode: "unstyled"
                font_size: sp(30)
                on_release: root.show_menu()

        RecycleView:
            data: root.chats
            viewclass: "ChatListItem"

            RecycleBoxLayout:
                padding: dp(10)
                spacing: dp(10)
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_size[1]
                default_size_hint: 1, None
                default_size: None, None

<MenuDialogContent>
    orientation: "vertical"
    adaptive_height: True
    padding: dp(15)
    spacing: dp(10)

    ListItem:
        text: "Çıkış"
        secondary_text: "Kullanıcı oturumunu kapatın"
        icon: "arrow-left"
        on_release:
            root.parent.parent.dismiss()
            app.root.set_current("login", side="right")